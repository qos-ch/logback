<?xml version="1.0" encoding="UTF-8"?>
<included>

    <appender name="LIST"  class="ch.qos.logback.core.read.ListAppender"/>

    <root level="INFO">
        <if condition='p("missing").equals("true")'>
            <then>
                <appender-ref ref="MISSING" />
            </then>
            <else>
                <appender-ref ref="LIST" />
            </else>
        </if>
    </root>

</included>