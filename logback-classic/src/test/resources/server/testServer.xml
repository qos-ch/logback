<server>
  <configuration>classpath:/ssl/testConfiguration.xml</configuration>
  <listener>
    <backlog>10</backlog>
    <port>4165</port>
  </listener>
  <ssl>
    <protocol>TLS</protocol>
    <parameters>
      <excludedProtocols>SSLv2Hello</excludedProtocols>
      <includedCipherSuites>.*_WITH_AES.*, .*_WITH_RC4.*</includedCipherSuites>
      <needClientAuth>true</needClientAuth>
    </parameters>
    <keyStore>
      <location>classpath:/ssl/keystore.p12</location>
      <type>PKCS12</type>
      <passphrase>changeit</passphrase>
    </keyStore>
    <trustStore>
      <location>classpath:/ssl/keystore.jks</location>
      <type>JKS</type>
      <passphrase>changeit</passphrase>
    </trustStore>
  </ssl>
</server>