<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration>

<configuration>

	<turboFilter class="ch.qos.logback.classic.turbo.DynamicThresholdFilter">
		<Key>userId</Key>
		<DefaultThreshold>ERROR</DefaultThreshold>
		<MDCValueLevelPair>
			<value>user1</value>
			<level>INFO</level>
		</MDCValueLevelPair>
		<MDCValueLevelPair>
			<value>user2</value>
			<level>TRACE</level>
		</MDCValueLevelPair>

	</turboFilter>


	<appender name="LIST"
		class="ch.qos.logback.core.read.ListAppender">
	</appender>

	<root>
		<level value="DEBUG" />
		<appender-ref ref="LIST" />
	</root>
</configuration>
