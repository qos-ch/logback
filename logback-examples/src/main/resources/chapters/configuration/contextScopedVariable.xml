<configuration>

  <property scope="context" name="nodeId" value="firstNode"/>

  <appender name="FILE" class="ch.qos.logback.core.FileAppender">
    <file>/opt/${noteId}/myApp.log</file>
    <encoder>
      <pattern>%msg%n</pattern>
    </encoder>
  </appender>

  <root level="debug">
    <appender-ref ref="FILE"/>
  </root>
</configuration>